{
  "name": "edis-lib",
  "version": "1.0.0",
  "description": "Library for pegelonline API",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/janschulte/@52north/pegelonline-js",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "build": "pnpm recursive --sort run build",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s build test:lint test:prettier",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "test:unit": "jest",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "jest --watch",
    "watch:node-test": "nodemon test/index.ts",
    "cov:html": "jest --reporter=html && open-cli coverage/index.html",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/node --exclude **/*.spec.ts --out build/docs",
    "doc:json": "typedoc src/node --exclude **/*.spec.ts --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && pnpm i",
    "prepare": "husky install",
    "prepare-release": "run-s reset-hard test cov:check doc:html version doc:publish"
  },
  "engines": {
    "node": ">= 16",
    "pnpm": "^8"
  },
  "devDependencies": {
    "@bitauth/libauth": "^1.17.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/jest": "^29.0.3",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "cspell": "^6.9.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.3",
    "jest": "^29.0.3",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "open-cli": "^7.0.1",
    "prettier": "^2.1.1",
    "standard-version": "^9.0.0",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.14",
    "typescript": "^4.0.2"
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": true
  }
}